<!DOCTYPE html>
<html lang="en">

    <%- include('../partials_views_app/head.ejs') %> 

    <body>
        
        <%- include('../partials_views_app/nav.ejs')  %>
        
        <div class="blogs_content">
            <h2>
                All blogs
            </h2>
            <% if (ronin_blogs.length> 0) { %>
                <% ronin_blogs.forEach(blog=> { %>
                    
                    <a href="/blogs/<%= blog._id %> " class="single"> 
                        <h3 class="blog_title">
                            <%= blog.title %>
                        </h3>
                        
                        <h4 class="blog_user_name">
                            By :
                            <%= blog.user_name %> 
                        </h4>
                    </a>
                        
                        <p class="blog_snippet">
                            <%= blog.snippet %>
                        </p>
                        
                        <p class="blog_body">
                            <%= blog.body %>
                        </p>

                    <% }) %>
                        <% } else { %>
                            <h3>There are no blog to display</h3>
                            <% } %>
        </div>
        
        <%- include('../partials_views_app/footer.ejs')  %>
        
    </body>

</html>